# MSSQL Database Migration Configuration Example
# Copy this file to .env and configure with your actual values

# Configuration for source database (migration source)
SOURCE_DB_HOST=your-source-server.com
SOURCE_DB_PORT=1433
SOURCE_DB_USER=sa
SOURCE_DB_PASSWORD=YourSourcePassword123!
SOURCE_DB_NAME=WAPRO_PRODUCTION
SOURCE_DB_INSTANCE=

# Configuration for target database (migration target)
TARGET_DB_HOST=localhost
TARGET_DB_PORT=1433
TARGET_DB_USER=sa
TARGET_DB_PASSWORD=WapromagPass123!
TARGET_DB_NAME=WAPROMAG_TEST
TARGET_DB_INSTANCE=

# Backup configuration
BACKUP_PATH=/var/opt/mssql/backup
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESS=true

# Migration settings
MIGRATION_BATCH_SIZE=1000
MIGRATION_TIMEOUT=300
MIGRATION_LOG_LEVEL=INFO
MIGRATION_SKIP_EXISTING=true

# Connection settings
CONNECTION_TIMEOUT=30
COMMAND_TIMEOUT=60
ENCRYPT_CONNECTION=false
TRUST_SERVER_CERTIFICATE=true

# Performance settings
MAX_CONNECTIONS=10
POOL_MIN=1
POOL_MAX=10
POOL_IDLE_TIMEOUT=30000
